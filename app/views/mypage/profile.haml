= render "shared/top_page_header"
- breadcrumb :mypage_profile
.bread  
  .bread__name
    =breadcrumbs
.mypage-index
  = render  "sidebar"
  .profile-main
    .profile-container
      .profile-contents
        %h2.profile-contents__title プロフィール
        = form_with model: @user, url: user_path(current_user.id), local: true, class: "profile-items" do |f|
          .profile-blocks 
            .profile-blocks-top
              = image_tag "#{@user.icon}", class: "profile-blocks-top__img", alt: "profileimg"
              = f.text_field :nickname, placeholder: "", value: "#{@user.nickname}", class: "profile-blocks-top__nickname"
            .profile-blocks-under
              = f.text_area :introduce, class: "profile-blocks-under__profiletext", placeholder: "例）こんにちは☆ご覧いただきありがとうございます！かわいいものやきれいめオフィスカジュアル中心に出品しています。服のサイズは主に9号です。気持ちよくお取引できるように心がけていますので、商品や発送方法などご質問がありましたらお気軽にどうぞ♪"
              = f.submit "変更する", class: "profile-blocks-under__submitbtn"
= render "shared/top_page_footer"
= render "shared/exhibit_logo"