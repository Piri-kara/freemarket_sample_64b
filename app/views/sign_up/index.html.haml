%body.sign-up-body
  .sign-up-header
    .sign-up-header-logo
      = link_to href:"#"
        = image_tag "fmarket_logo_red.svg", alt: "ロゴマーク", class: "sign-up-header-logo__mark"
  .sign-up-main
    .sign-up-container
      %h2.sign-up-container__top 新規会員登録
      %ul.sign-up-content
        %li.sign-up-content__menu.mail
            メールアドレスで登録する
          = link_to "会員登録", href:"#" do
            %i.far.fa-envelope.fa-large>
        %li.sign-up-content__menu.facebook
          = link_to "Facebookで登録する", href:"#" do
            %i.fab.fa-facebook-square.fa-large>
        %li.sign-up-content__menu.google
          = link_to "Googleで登録する", href:"#" class:"googletext" do
            %i.fab.fa-google.fa-large>
  = render "footer"
  