%body.adress-body
  .adress-header
    .adress-header-logo
      %a{href: "#"}
        %img.adress-header-logo__mark{alt: "ロゴマーク", src: "fmarket_logo_red.svg"}/
    .adress-header-right
      .progress
        %p.progress__pages 会員情報
        %p.progress__point.active ●
        .progress-line-start
          .progress-line-start__line1
          .progress-line-start__line2
      .progress
        %p.progress__pages 電話番号認証
        %p.progress__point.active ●
      .progress
        %p.progress__pages.active お届け先住所入力
        %p.progress__point.active ●
      .progress
        %p.progress__pages 支払い方法
        %p.progress__point ●
      .progress
        %p.progress__pages 完了
        %p.progress__point ●

  .adress-main
    .adress-container
      %h2.adress-container__top お届け先住所入力
      .adress-contents
        %form.adress-contents-form
          .adress-name.adress-items
            %p.adress-name__top-left.info_item お名前(全角)
            %p.adress-name__top-right.required 必須
            %br/
            %input.adress-name__input-lastname.input{placeholder: "例)山田", type: "text", value: ""}/
            %input.adress-name__input-firstname.input{placeholder: "例)彩", type: "text", value: ""}/
          .adress-name.adress-items
            %p.adress-name__top-left.info_item お名前カナ(全角)
            %p.adress-name__top-right.required 必須
            %br/
            %input.adress-name__input-lastname.input{placeholder: "例)ヤマダ", type: "text", value: ""}/
            %input.adress-name__input-firstname.input{placeholder: "例)アヤ", type: "text", value: ""}/
          .adress-adressnum.adress-items
            %p.adress-adressnum__top-left.info_item 郵便番号
            %p.adress-adressnum__top-right.required 必須
            %br/
            %input.adress-adressnum__input.input{placeholder: "例）123-4567", type: "text", value: ""}/
            %br/
          .adress-prefectures.adress-items
            %p.adress-prefectures__top-left.info_item 都道府県
            %p.adress-prefectures__top-right.required 必須
            %br/
            .prefectures-block
              .prefectures-block__select.prefectures
                %i.fas.fa-angle-down.fa-large
          .adress-city.adress-items
            %p.adress-city__top-left.info_item 市区町村
            %p.adress-city__top-right.required 必須
            %br/
            %input.adress-city__input.input{placeholder: "例）横浜市緑区", type: "text", value: ""}/
            %br/
          .adress-adress.adress-items
            %p.adress-adress__top-left.info_item 番地
            %p.adress-adress__top-right.required 必須
            %br/
            %input.adress-adress__input.input{placeholder: "例）青山1-1-1", type: "text", value: ""}/
            %br/
          .adress-adressbuild.adress-items
            %p.adress-adressbuild__top-left.info_item 建物名
            %p.adress-adressbuild__top-right.any 任意
            %br/
            %input.adress-adressbuild__input.input{placeholder: "例）柳ビル103", type: "text", value: ""}/
            %br/
          .adress-phonenumber.adress-items
            %p.adress-phonenumber__top-left.info_item 電話
            %p.adress-phonenumber__top-right.any 任意
            %br/
            %input.adress-phonenumber__input.input{:placeholder => "例）09012345678", :type => "text", :value => ""}/
            %br/
          .adress-next.adress-items
            %input.adress-next__btn.btn{:type => "submit", :value => "次へ進む"}/
            %br/
= render "footer"